{
	"name": "action-jira-linker",
	"version": "1.0.0",
	"description": "Add JIRA issue details to your GitHub pull request",
	"main": "lib/index.js",
	"scripts": {
		"build": "esbuild --bundle --platform=node src/index.ts --outfile=lib/index.js",
		"format": "prettier --write ./**/*.ts && eslint --fix ./**/*.ts",
		"lint": "prettier --check ./**/*.ts && eslint ./**/*.ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/exogee-technology/action-jira-linker"
	},
	"engines": {
		"node": ">= 18"
	},
	"keywords": [
		"actions",
		"node",
		"setup",
		"github",
		"pr-comment",
		"jira",
		"jira-issue"
	],
	"author": "thekevinbrown",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "1.11.1",
		"@actions/github": "6.0.0",
		"@octokit/rest": "21.0.2",
		"axios": "1.7.7"
	},
	"devDependencies": {
		"@types/jest": "29.5.14",
		"@types/node": "22.8.1",
		"@typescript-eslint/parser": "7.15.0",
		"esbuild": "0.24.0",
		"eslint": "8.57.0",
		"eslint-plugin-github": "5.1.2",
		"eslint-plugin-jest": "28.8.3",
		"prettier": "3.3.3",
		"typescript": "5.6.3"
	}
}
